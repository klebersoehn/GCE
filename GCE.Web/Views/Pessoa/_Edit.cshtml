@model GCE.Domain.Models.Pessoa

@using (Ajax.BeginForm("_Edit", "Pessoa", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "_ContentModal", InsertionMode = InsertionMode.Replace }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(m => m.TipoPessoa)
        @Html.HiddenFor(m => m.UpdatedDate)
        @Html.HiddenFor(m => m.Situacao)

        @{ Html.RenderPartial("_CreateOrEdit"); }

        <button type="submit" id="btn-submit" style="display:none"></button>
    </div>
}
