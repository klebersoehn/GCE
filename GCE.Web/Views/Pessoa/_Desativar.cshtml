@model GCE.Domain.Models.Pessoa

<div class="card">
    <div class="card-header">
        Desativar Registro
    </div>
    <div class="card-body">
        @*<h5 class="card-title">Excluir Registro Permanentemente</h5>*@
        <p class="card-text">Tem certeza de que deseja desativar este registro?</p>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.CpfCnpj)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CpfCnpj)
            </dd>
        </dl>
        @Ajax.ActionLink("Sim", "_DesativarConfirmed", "Pessoa", new { Id = Model.Id }, new AjaxOptions() { UpdateTargetId = "_ContentModal", InsertionMode = InsertionMode.Replace }, new { @class = "btn btn-primary" })
        <button type="button" class="btn btn-secondary" data-dismiss="modal" aria-label="Close">Não</button>
    </div>
</div>

<script>
    $(document).ready(function () {
        $.get('@Url.Action("_HeaderModal")', function (data) {
            $('#_ContentHeaderModal').html(data);
        });
    });
</script>