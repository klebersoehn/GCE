<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">GCE</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Principal", "Index", "Home", null, new { @class = "nav-link active" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Fornecedores", "Index", "Pessoa", null, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="body-content">
        @RenderBody()
    </div>

    <!--Modal-->
    <div class="modal fade" id="DialogModal" tabindex="-1" role="dialog" aria-labelledby="ModalAbreTudoLabel"
         aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header" id="_ContentHeaderModal">

                </div>
                <div class="modal-body" id="_ContentModal">

                </div>
                <div class="modal-footer">
                    @*<button type="button" class="btn btn-primary" data-dismiss="modal">Ok</button>*@
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @*<script src="~/Scripts/bootstrap.min.js"></script>*@
    @Scripts.Render("~/bundles/datatable")
    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            $('#fornecedores').DataTable({
                "scrollX": true,
                "scrollY": (window.innerHeight - 300) + "px"
            });
        });
    </script>

    <script>
        $('body').on('click', '.dialog-buton', function () { });

        $('.modal-body').css({ "height": (window.innerHeight - 200) + "px" });

        $('#DialogModal').on('hidden.bs.modal', function () {
            location.reload();
            $('input:radio[name=select_Id]').each(function () { $(this).prop('checked', false); });
        })

    </script>

    <script>
        $(function () {
            Globalize.culture("pt-BR");
        });
    </script>

</body>
</html>



