@Scripts.Render("~/bundles/jquery")

<script type="text/javascript">
    $(function () {

        $('input[type=radio][name=TipoPessoa]').change(function () {
            if ($(this).val() == "Fisica") {
                $('.juridica').hide();
                $('.fisica').show();
                $('#nome').text("Física ");
            } else {
                $('.fisica').hide();
                $('.juridica').show();
                $('#nome').text("Jurídica");
            }
        });

        $('input[type=radio][name=TipoPessoa]:checked').change();

        $.get('@Url.Action("_HeaderModal", "Pessoa", new { Id = (Model != null ? Model.Id : 0) })', function (data) {
            $('#_ContentHeaderModal').html(data);
        });
    });

</script>

@if (Model != null && Model.Id > 0)
{
    <script>
        $('input[type=radio][name=TipoPessoa]').attr("disabled", "disabled");
    </script>
}